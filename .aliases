commit() {
    git commit -m "$*"
}

gitpush() {
    git pull
    git commit -m "$*"
    git push
}

gitclone() {
  git_dir="$(basename "$1" .git)"
  git_dir_resolved=${2:-$git_dir}
  git clone "$@" && cd "$git_dir_resolved";
}





